#!/bin/bash

if [ "$1" == "start" ] || [ "$1" == "" ]; then
    npx webpack-dev-server --config ./node_modules/@penthouse/psystem/webpack.config.js --mode=development --port "$2"
elif [ "$1" == "build" ]; then
    npx webpack --config ./node_modules/@penthouse/psystem/webpack.config.js --mode=production
else
    echo "commands: start port(optional), build"
fi
